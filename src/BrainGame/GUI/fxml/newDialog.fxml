<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BrainGame.GUI.Controllers.NewDialogController">
    <top>
        <Text text="Creating new Brain instance. " BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin></Text>
    </top>
    <center>
        <HBox alignment="CENTER" prefHeight="0" spacing="30.0">
            <Text text="Number of neurons" />
            <TextField fx:id="neurons_n" promptText="Neurons" />
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="30">
            <Button onAction="#closeStage" text="Cancel" />
            <Button onAction="#sendData" text="Okay" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
